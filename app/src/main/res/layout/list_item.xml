<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/card_margin_LR"
    android:layout_marginRight="@dimen/card_margin_LR"
    android:layout_marginTop="@dimen/card_margin_TB"
    card_view:cardCornerRadius="@dimen/cardview_default_radius">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/card_margin_LR"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/card_item_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_id_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/id"
                android:layout_marginRight="@dimen/text_margin_right"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                />

            <TextView
                android:id="@+id/text_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/id"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/card_item_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_nome_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/nome"
                android:layout_marginRight="@dimen/text_margin_right"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                />

            <TextView
                android:id="@+id/text_nome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/nome"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/card_item_padding"
            android:paddingBottom="@dimen/card_item_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_password_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/password"
                android:layout_marginRight="@dimen/text_margin_right"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                />

            <TextView
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/password"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>